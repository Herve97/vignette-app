<%- include('../_layouts/header.ejs') %>
  <%- include('../_layouts/loader.ejs') %>

  <!-- Begin page content -->
  <main class="flex-shrink-0 main">
    <!-- Fixed navbar -->
    <header class="header">

      <div class="row">

        <div class="col-auto px-0">
          <button class="menu-btn btn btn-40 btn-link back-btn" type="button">
            <span class="material-icons">keyboard_arrow_left</span>
          </button>
        </div>
            
        <div class="text-left col align-self-center">
          <a class="navbar-brand" href="#">
            <h5 class="mb-0">Ajouter Véhicule</h5>
          </a>
        </div>

        <%- include('../_layouts/headside.ejs') %>

      </div>

    </header>

    <!-- page content start -->

    <div class="main-container">
      <div class="container">
        <!--div class="alert alert-danger">
          <b>Ooops!</b> There is some error in data you have entered. Please enter correct details.
        </div-->

        <div class="card">

          <div class="card-header">

            <h6 class="subtitle mb-0">
              <div class="avatar avatar-40 bg-primary-light text-primary rounded mr-2"><span class="material-icons vm">credit_card</span></div>
              Ajouter un véhicule
            </h6>

          </div>

          <div class="card-body">

            <form method="POST" action="/vehicule/addvehicule" enctype="multipart/form-data" id="form-input" data-parsley-validate>

              <div class="form-row">
  
                <div class="col-md-6">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Marque</label>
                    <input class="form-control text-black" id="inputFirstName" name="marque" type="text" placeholder="Marque véhicule" required/>
                  </div>
  
                </div>
  
  
                <div class="col-md-6 ">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Modèle</label>
                    <input class="form-control text-black" name="modele" id="inputFirstName" type="text" placeholder="Modèle véhicule" required/>
                  </div>
  
                </div>
  
              </div>
  
  
              <div class="form-row">
  
                <div class="col-md-6">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">N° chassis</label>
                    <input class="form-control text-black" id="inputFirstName" name="num_chassis" type="text" placeholder="N° chassis" required/>
                  </div>
  
                </div>
  
                <div class="col-md-6">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Puissance (CV)</label>
                    <input class="form-control text-black" id="inputFirstName" name="puissance" type="text" placeholder="Puissance en CV" required/>
                  </div>
  
                </div>
  
              </div>
  
              <div class="form-row">
  
                <div class="col-md-6">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Couleur</label>
                    <input class="form-control text-black" id="inputFirstName" name="couleur" type="text" placeholder="Couleur" required/>
                  </div>
  
                </div>
  
                <div class="col-md-6">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Plaque</label>
                    <input class="form-control text-black" id="inputFirstName" name="num_plaque" type="text" placeholder="N° Plaque" required/>
                  </div>
  
                </div>
  
              </div>
  
              <div class="form-row">
  
                <div class="col-md-6">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Type</label>
                    <input class="form-control text-black" name="type" id="inputFirstName" type="text" placeholder="Type Carburant" required/>
                  </div>
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Photo</label>
                    <input class="form-control text-black" name="pic" id="inputFirstName" type="file" />
                  </div>
  
                </div>
  
                <div class="col-md-6">
  
                  <div class="form-group float-label active">
                    <label class="form-control-label text-black" for="inputFirstName">Année</label>
                    <input class="form-control text-black" name="annee_fabrication" id="inputFirstName" type="number" placeholder="Année de fabrication" required/>
                  </div>
  
                </div>
  
              </div>
  
              <div class="card-footer">
                  <button class="btn btn-success">Enregistrer</button>
              </div>
  
            </form>

            <div class="col">
              <a href="/home">
                <button class="btn btn-danger">Annuler</button>
              </a>
            </div>

          </div>

        </div>

      </div>

    </div>



  </main>


  <!-- Required jquery and libraries -->
  <script src="/js/jquery-3.3.1.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>

  <!-- cookie js -->
  <script src="/js/jquery.cookie.js"></script>

  <!-- Swiper slider  js-->
  <script src="/vendor/swiper/js/swiper.min.js"></script>

  <!-- Customized jquery file  -->
  <script src="/js/main.js"></script>
  <script src="/js/color-scheme-demo.js"></script>


  <!-- page level custom script -->
  <script src="/js/app.js"></script>

</body>

</html>